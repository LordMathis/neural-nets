{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "/bin/gcc",
			"args": [
				"-g",
				"${workspaceFolder}/main.c",
				"${workspaceFolder}/lib/*.c",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}